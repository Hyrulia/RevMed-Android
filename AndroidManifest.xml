<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sim.evamedic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:name="com.sim.evamedic.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        >
        <activity
            android:name="com.sim.evamedic.SpecialityActivity"
            android:label="@string/title_activity_speciality"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sim.evamedic.QuestionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sim.evamedic.RevisionActivity"
            android:label="@string/title_activity_revision" >
        </activity>
        <activity
            android:name="com.sim.evamedic.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
         <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sim.evamedic.ObjectiveActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_objective" >
        </activity>
        <activity
            android:name="com.sim.evamedic.ScoreActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:name="com.sim.evamedic.MenuActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:label="@string/title_activity_menu" >
        </activity>
    </application>

</manifest>